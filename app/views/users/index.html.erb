<h1>Users</h1>
<% if current_user.name === "Root" && current_user.admin? %>
<div class="btn-group" role="group" aria-label="...">
  <a href="<%= new_user_path %>"type="button" class="btn btn-default">+ New User</a>
</div>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Name</th>
        <th>Is Admin</th>
        <th colspan=2>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @user.each do |user| %>
      	<tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.admin %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning" %></td>
          <% if user.name != "Root" && user.name != "Sigasig Guest" %>
          	<td><%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
<p>You do not have sufficient permissions to access this module.</p>
<% end %>