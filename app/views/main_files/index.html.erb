<h1>Employees</h1>

<div class="btn-group" role="group" aria-label="...">
  <a href="<%= new_main_file_path %>"type="button" class="btn btn-default">+ New Employee</a>
</div>
<% if current_user.admin? %>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Type</th>
        <th>Status</th>
        <th>License Expiry Date</th>
        <th colspan=3>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @mainfiles.each do |mainfile| %>
      	<tr>
          <td><%= mainfile.id %></td>
          <td><%= mainfile.family_name %></td>
          <td><%= mainfile.given_name %></td>
          <td><%= mainfile.emp_type.desc %></td>
          <td><%= mainfile.emp_status.desc %></td>
          <% if mainfile.guard_ext_file != nil %>
            <td><%= mainfile.guard_ext_file.expiry_date %></td>
          <% else %>
            <td>N/A</td>
          <% end %>
          <td><%= link_to 'View', main_file_path(mainfile), class: "btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_main_file_path(mainfile), class: "btn btn-warning" %></td>
          <td><%= link_to 'Delete', main_file_path(mainfile), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
<p>Click on the New Employee button to fill up your application form.</p>
<% end %>